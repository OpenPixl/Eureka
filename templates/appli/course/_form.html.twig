{{ form_start(form) }}
<div class="mb-4">
    {# STRING : Ligne du nom d la matière #}
    <div class="row mb-1 mt-1 g-1">
        <div class="col-12">
            {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Nom de la matière'}}) }}
        </div>
    </div>

    {# STRING : input logo #}
    <div class="row mb-1 mt-1 g-1">
        <div class="col-4 d-flex align-items-center">
            {{ form_label(form.logo) }}
        </div>
        <div class="col-8">
            {{ form_widget(form.logo, {'attr':{'class':'form-control form-control-sm'}}) }}
        </div>
    </div>

    {# STRING : Ligne de l'enseignant responsable#}
    {% if app.request.attributes.get('_route') == 'op_appli_course_new' %}
    <div class="row mb-1 mt-1 g-1">
        <div class="col-4 d-flex align-items-center">
            {{ form_label(form.teacher) }}
        </div>
        <div class="col-8">
            {{ form_widget(form.teacher, {'attr': {'class': 'form-control form-control-sm', 'placeholder': "Nom de l'enseignant.e"}}) }}
        </div>
    </div>
    {# STRING : Ligne du mail du membre #}
    <div class="row mb-1 mt-1 g-1">
        <div class="col-12">
            {{ form_widget(form.level, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Niveau'}}) }}
        </div>
    </div>

    <div class="mt-4 mb-4">
        <button class="btn btn-sm btn-primary w-100">{{ button_label|default('Ajouter') }}</button>
    </div>
    {% endif %}
{{ form_end(form) }}
